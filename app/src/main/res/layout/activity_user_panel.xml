<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.UserPanelActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="@string/user_panel"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/darkerTextColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UP_CompletedTasksView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="5sp"
            android:text="@string/completed_tasks"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/UP_CompletedTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="5sp"
            android:textSize="16sp"
            android:textAlignment="textEnd" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/darkerTextColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UP_StreakView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5sp"
            android:textSize="16sp"
            android:text="@string/tasks_streak" />

        <TextView
            android:id="@+id/UP_Streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="5sp"
            android:textSize="16sp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/darkerTextColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UP_LastTaskCompletionDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingStart="5sp"
            android:text="@string/last_task_completed_on" />

        <TextView
            android:id="@+id/UP_LastTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="5sp"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:background="@color/darkerTextColor">

        <TextView
            android:id="@+id/SSII_taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:width="100dp"
            android:background="@color/darkerTextColor"
            android:text="Task Name:"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/SSII_XPPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:width="30dp"
            android:background="@color/darkerTextColor"
            android:text="XP"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/SSII_timeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/darkerTextColor"
            android:text="Remaining Time:"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/UP_TaskListScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/darkerTextColor">

            <LinearLayout
                android:id="@+id/UP_TaskListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>